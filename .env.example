# API Keys
OPENAI_API_KEY=your_openai_or_openrouter_api_key_here
FRED_API_KEY=your_fred_api_key_here
NEWS_API_KEY=your_news_api_key_here
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key_here

# Server Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Database
DATABASE_PATH=./data/economic_advisor.db

# LLM Configuration
# For OpenAI: gpt-4, gpt-4-turbo, gpt-3.5-turbo
# For OpenRouter: anthropic/claude-3-opus, meta-llama/llama-3-70b-instruct, etc.
# See https://openrouter.ai/models for full list
LLM_MODEL=anthropic/claude-3.5-sonnet
LLM_TEMPERATURE=0.7
MAX_TOKENS=2000

# LLM Provider (openai or openrouter)
LLM_PROVIDER=openrouter
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
